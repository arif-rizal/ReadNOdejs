
<!-- //>> DISINI MENMPILKAN SEMUA TAMPILAN DIDLM ADD CONTACT -->

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>form tambah data contact</h2>

            <!-- ini mengecek error dari add contact -->
            <% if (typeof errors != 'undefined') { %>
                <!-- alert error -->
                <div class="alert alert-danger" role="alert">
                    <!-- karena error dlm bentuk array of object maka harus dilooping -->
                    <ul>
                    <% errors.forEach(error => { %>

                    <li><%= error.msg %></li> 
                    <% }) %>
                    </ul>
                </div>
            <% } %>


            <form method="post" action="/contact">
                <div class="mb-3">

                <!-- NAMA -->

                <label for="nama" class="form-label">nama</label>
                <input type="type" class="form-control" id="nama" name="nama" required/>
                </div>

                <!-- EMAIL -->

                <label for="email" class="form-label">email</label>
                <input type="email" class="form-control" id="email" name="email" required/>
            </div>
            
            <!-- NOHP -->
            
            
            <label for="nohp" class="form-label">no hp</label>
            <input type="type" class="form-control" id="nohp" name="nohp" required/>
            </div>
                
                <!-- tombol add submit nya -->
                <button type="submit" class="btn btn-primary"> add Submit contact</button>
              </form>

              
        </div>
    </div>
</div>