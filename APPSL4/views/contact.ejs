<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>daftar contact</h2>


            <!-- awal boostrap yg membentuk table -->
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">nama</th>
                    <th scope="col">nomor hp</th>
                    <th scope="col">action</th>
                  </tr>
                </thead>
                <tbody>

                  <!-- INI LOOPING INDEX  DARI ISI JSON -->
                    <% contacts.forEach((contact, i) => { 
                    i++ %>
   
                        <tr>
                          <th scope="row"> <%=
                            i++ %></th>

                          <td><%= contact.nama %></td>
                          <td><%= contact.nohp %></td>

                   
                         
                          <td> 
                              <a href="/contact/<%= 
                            contact.nama %>" class="btn btn-success badge rounded-pill" ><i class="bi bi-info-circle-fill"> </i>detail</a>
                          </td>


                        </tr>         
                    <% }) %>

                   
                    
                    
                    <% if (contacts.length === 0) { %>
                      
                      <tr>
                        <td colspan="4k">  <div class="alert alert-danger" role="alert">
                          data contact masih kosong
                          </div>
                          </td>
                          </tr>
                          
                          <% } %>
                          
                      
                </tbody>
              </table>
              
        </div>
    </div>
</div>